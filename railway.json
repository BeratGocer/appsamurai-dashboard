{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && npm run build"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_VERSION": "22.12.0"
      }
    }
  },
  "deploy": {
    "startCommand": "cd server && npm run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
